    <!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-7">
                        <div class="header__top__left">
                            <p>Безплатна доставка при поръчка на 99лв.</p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-5">
                        <div class="header__top__right">
                            <div class="header__top__links">
                                @if (User.Identity.IsAuthenticated)
                                {


                                    <form id="form1" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <a asp-area="Identity" asp-page="/Account/Manage/Email" title="Manage">Здравей, @User.Identity?.Name!</a>
                                        <a href="#" onclick="document.getElementById('form1').submit();">Изход</a>
                                    </form>
                                }
                                else
                                {
                                    <a asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
                                    <a asp-area="Identity" asp-page="/Account/Login">Вход</a>
                                }
                            </div>
                            @if (User.IsInRole("Administrator"))
                            {
                                <div class="header__top__hover">
                                    <span>Администрация<i class="arrow_carrot-down"></i></span>
                                    <ul>
                                        <li><a asp-area="Admin" asp-controller="Product" asp-action="Add"> Добавяне на продукт</a></li>
                                        <li><a asp-area="Admin" asp-controller="Category" asp-action="Add"> Добавяне на категория</a></li>
                                        <li><a asp-area="Admin" asp-controller="Order" asp-action="AllOrders">Поръчки</a></li>
                                    </ul>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="header__logo">
                        <a style="width: 200px" href="/"><img src="~/img/logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">

                    <!-- Navbar render -->
                    @await Component.InvokeAsync("Navbar")

                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-lg-3 col-md-3">
                        <div class="header__nav__option">
                            <a href="#" class="search-switch"><img src="~/img/icon/search.png" alt=""></a>
                            <!-- Cart render -->
                        @await Component.InvokeAsync("Cart")
                        </div>
                    </div>
                }
            </div>
            <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>


    </header>
    <!-- Header Section End -->
    <br />
    <div class="container">

        @RenderBody()

    </div>
    <br />
    <!-- Footer Section Begin -->
    <footer class="footer">
        <div class="container">
            <div class="row">
@*                <div class="col-lg-3 col-md-6 col-sm-6">
