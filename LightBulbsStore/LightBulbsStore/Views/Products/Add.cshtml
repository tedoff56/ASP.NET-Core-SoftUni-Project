@model ProductAddFormViewModel

@{
  ViewData["Title"] = "Добавяне на продукт";
}
<!DOCTYPE html>

<html>
  <head>
      <title>Добавяне на продукт</title>
  </head>
<body>

<div>
  <h1 class="text-center heading-text"> Добавяне на продукт </h1>
</div>

<div class="container">
  <div class="row">
    <div class="offset-md-2 col-md-8 col-sm-12">
      <form method="post">
        <div class="form-group">
          <label asp-for="Name"></label>
          <input asp-for="Name" type="text" class="form-control" placeholder="Пример: Луничка за Баня IP65">
          <span asp-validation-for="Name" class="small text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Price"></label>
          <input asp-for="Price" type="number" min="0" class="form-control" placeholder="4.99">
          <span asp-validation-for="Price" class="small text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="ImageUrl"></label>
          <input asp-for="ImageUrl" type="text" class="form-control" id="ImageUrl" placeholder="Линк">
          <span asp-validation-for="ImageUrl" class="small text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CategoryId"></label>
          <select asp-for="CategoryId" class="form-control">
            @foreach (var category in Model.Categories)
            {
              <option value="@category.Id">@category.Name</option>

            }
          </select>
        </div>
        <div class="form-group">
          <label asp-for="Description"></label>
          <textarea asp-for="Description" class="form-control" rows="7"></textarea>
          <span asp-validation-for="Description" class="small text-danger"></span>
        </div>
        <input class="btn btn-primary text-center" style="margin-top: 8px" type="submit" value="Запази"/>

      </form>
    </div>
  </div>
</div>

</body>
</html>